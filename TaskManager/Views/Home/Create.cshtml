@model TaskManager.Models.Task

@{
    ViewData["Title"] = "Создание новой задачи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание новой задачи</h2>

<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <input type="hidden" asp-for="ParentTaskId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListOfPerformers" class="control-label"></label>
                <input asp-for="ListOfPerformers" class="form-control"/>
                <span asp-validation-for="ListOfPerformers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Laboriousness" class="control-label"></label>
                <input asp-for="Laboriousness" class="form-control"/>
                <span asp-validation-for="Laboriousness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
